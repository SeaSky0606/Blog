extends ../layout/app
block content
    br
    .content
        div.header
            h1
        for post in posts
            div.content
                h2
                    li
                        a.pure-menu-link(href="/posts/#{post.getLink()}") #{post.getTitle()}
                            p.post-meta(style="font-size :0.5em;{font-family: serif;")&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                =post.getCreatedAt()


    div.footer
        p.legal-copyright &copy; doppler